@using ThaiPaymentAPI.Models;
@{
    ViewBag.Title = "Edit";
    var data = (OrderDetail)Model;
}
<h2>Edit Order</h2>
<form method="post" action="" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER ID</label>
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="order_id" value="@data.order_id" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER NAME</label>
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="order_name" value="@data.order_name" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER DESC</label>
        </div>
        <div class="col-sm-6">
            <textarea class="form-control" name="order_desc">@data.order_desc</textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER GROUP</label>
        </div>
        <div class="col-sm-6">
            <select name="order_group" class="form-control dropdown" readonly>
                @foreach (OrderGroup group in (List<OrderGroup>)ViewBag.GroupData)
                {
                    if (group.order_group.Equals(data.order_group))
                    {
                        <option value="@group.order_group" selected>@group.order_groupname</option>
                    }
                    else
                    {
                        <option value="@group.order_group">@group.order_groupname</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER AMOUNT</label>
        </div>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="order_amount" value="@data.order_amount" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>CURRENCY</label>
        </div>
        <div class="col-sm-6">
            <select name="currency" class="form-control dropdown" readonly>
                @foreach (string curr in (string[])ViewBag.Currencys)
                {
                    if (curr.Equals(data.currency))
                    {
                        <option value="@curr" selected>@curr</option>
                    }
                    else
                    {
                        <option value="@curr">@curr</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER PIC</label>
        </div>
        <div class="col-sm-6">
            <input type="file" name="order_pic" />
            <input type="text" class="form-control" value="@data.order_pic" />
            @{
            if (System.IO.File.Exists(Server.MapPath(data.order_pic)))
            {
                    <img src="@data.order_pic" style="width:auto" />
            }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER TARGET</label>
        </div>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="order_target" value="@data.order_target" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER ACTUAL</label>
        </div>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="order_actual" value="@data.order_actual" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <label>ORDER ACTIVE</label>
        </div>
        <div class="col-sm-6">
            @if (data.isactive)
            {
                <input type="checkbox" name="isactive" checked />
            }
            else
            {
                <input type="checkbox" name="isactive" />
            }
        </div>
    </div>
    <input type="submit" class="btn btn-success" value="Save Order" />
</form>

