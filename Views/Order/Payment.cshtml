                                        break;
                                    case "T":
                                        <option value="T">Thai</option>
                                        break;
                                }
                            }
                        }
                    </select>
                </div>
            </div>*@
    </div>
    @*<input type="hidden" name="currCode" value="764" />*@
    <input type="text" name="payType" value="CC" />
    <input type="submit" class="btn btn-success" value="Confirm" />
</form>
