@using ThaiPaymentAPI.Models;
@{
    ViewBag.Title = "Checkout";
}
<h2>Payment</h2>
<form method="POST" action="@Url.Action("PostOrderPaymentPRD","Test2C2P")">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <label>Order ID</label>
            </div>
            <div class="col-sm-6">
                <input type="text" name="orderId" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label>Description</label>
            </div>
            <div class="col-sm-6">                
                <input type="text" name="orderDesc" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label>Currency</label>
            </div>

            <div class="col-sm-6">
                <input type="text" name="currCode" value="THB" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label>Payment Amount</label>
            </div>
            <div class="col-sm-6">
                <input type="number" name="amount"  />
            </div>
        </div>
